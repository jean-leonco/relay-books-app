{
  "name": "booksapp",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "author": "Jean Leon√ßo",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "android": "yarn workspace @workspace/app android",
    "app": "yarn workspace @workspace/app start",
    "app:pod": "yarn workspace @workspace/app pod:install",
    "database:seed": "yarn workspace @workspace/server seed",
    "delete:all": "yarn delete:build && yarn delete:dist && yarn delete:generated && yarn delete:metro-cache && yarn delete:node_modules && yarn delete:yarn-offline-cache",
    "delete:build": "find . -name \"build\" -exec rm -rf '{}' +",
    "delete:dist": "find . -name \"dist\" -exec rm -rf '{}' +",
    "delete:generated": "find . -name \"__generated__\" -exec rm -rf '{}' +",
    "delete:metro-cache": "find . -name \"metro-cache\" -exec rm -rf '{}' +",
    "delete:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +",
    "delete:snapshot": "find . -name \"__snapshots__\" -exec rm -rf '{}' +",
    "delete:yarn-offline-cache": "find . -name \"yarn-offline-cache\" -exec rm -rf '{}' +",
    "delete:yarn.lock": "find . -name \"yarn.lock\" -exec rm -rf '{}' +",
    "graphql": "yarn workspace @workspace/server graphql",
    "ios": "yarn workspace @workspace/app ios",
    "lint": "eslint --fix --ext .js,.ts,.tsx",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx .",
    "prettier": "prettier",
    "relay": "yarn workspace @workspace/app relay",
    "server:build": "yarn workspace @workspace/server build",
    "server:test": "yarn workspace @workspace/server test",
    "startup": "./scripts/startup.sh",
    "test": "jest --maxWorkers=4",
    "update": "yarn update-schema && yarn relay",
    "update-schema": "yarn workspace @workspace/server update-schema"
  },
  "resolutions": {
    "graphql": "15.4.0",
    "webpack": "5.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.15",
    "babel-jest": "^26.6.3",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "patch-package": "^6.2.2",
    "prettier": "^2.2.0",
    "sort-package-json": "^1.48.0",
    "typescript": "^4.1.2"
  }
}
